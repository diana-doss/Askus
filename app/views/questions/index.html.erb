<button class="btn btn-info pull-right"><%= link_to 'Ask Question', new_question_path %></button>
       <% @questions.each do |question| %><div class="row">
      <div class="col-sm-3">
        <div class="question_number pull-right">
          
        </div>
        <div class="up_vote pull-right">
         <%= link_to like_question_path(question), method: :put do %>
          <i class="glyphicon glyphicon-triangle-top" style="font-size:20px;"></i>
         <% end -%>
        </div><br><br>
        <div class="question_number pull-right">
          <span style="font-size:15px;"><%= question.votes_count %> </span>
        </div><br><br>
        <div class="down_vote pull-right">
          <%= link_to dislike_question_path(question), method: :put do %>
            <i class="glyphicon glyphicon-triangle-bottom" style="font-size:20px;"></i>
          <% end -%>
      </div>
      </div>
      <div class="col-sm-6">
        <span class="description pull-left"><%= link_to "#{question.question}", question_path(question)%></a></span><br><br>
        <span class='notbold' ><%= question.description %>.</span><br><br>
        <div class="badges">
         <%- if question.try(:skills).present? %>
            <% eval(question.skills).each do |skill| %>
            
              <span class="label label-primary"><%= skill %></span>
            <% end %>
        <!-- <span class="label label-primary"><%= question.skills.gsub(/[^0-9a-z ]/i, '') %></span> -->
         <!--  <span class="label label-primary">Java</span>
          <span class="label label-primary">Apache</span> -->

        </div>
        <% end %>
       
          
        
      </div>
    </div>
  <hr>
  <% end %>


<table class="table table-bordered">
  <thead class="thead-inverse">
    <tr>
      
      <th>questions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>

        <td><b>
        <%= question.id %><br><h4><%= question.question %><br>
        <span class="badge badge-pill badge-primary"><%= question.description %></span><br></h4>
        <span class="label label-info"><%= question.skills %></span></h4></td>


         

       
        <td>
        <button type="button" class="btn btn-link"><b><%= link_to 'Show', question %></b></button></td>
        <td><%= button_to '+1', upvote_question_path(question), method: :post %></td>
        <td><button type="button" class="btn btn-link"><b><%= link_to 'Edit', edit_question_path(question) %></b></button></td>
        <td><button type="button" class="btn btn-link"><b><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></b></button></td>
      </tr>
    
    <% end %>
   
  </tbody>
</table>

<br>
<button type="button" class="btn btn-outline-primary"><b>
<%= link_to 'Ask Question', new_question_path %></b></button>


